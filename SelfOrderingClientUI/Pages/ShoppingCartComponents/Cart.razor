@page "/Cart"
<h3>Cart</h3>

@foreach (var item in Order.ItemQuantity)
{
    <CartMenuItemCard ItemName="@item.Key" Quantity="item.Value" Total="Order.OrderItems.Where(x=>x.Name==item.Key).First().Price * item.Value" RemoveCallBack="() => RemoveItem(item.Key)"></CartMenuItemCard>
}

@if(Order.ItemQuantity.Count == 0 || Order.OrderItems.Count == 0)
{
    <button class="btn btn-secondary btn-block disabled" @onclick="Commit">Done</button>
}
else
{
<div>
    <span class="d-block text-center text-dark" style="font-size:22.0pt; font-weight:bolder">
        Total: £@OrderTotal
    </span>
    @if (Order.OrderItems.Count == 0)
    {
        <button class="btn btn-success btn-block" @onclick="Commit" disabled>Done</button>
    }
    else
    {
        <button class="btn btn-success btn-block" @onclick="Commit">Done</button>
    }

</div>
}


