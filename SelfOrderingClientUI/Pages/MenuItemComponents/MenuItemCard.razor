<div class="card d-flex" style="width: 24rem;">
    <img class="card-img-top" src="@Image" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@CardTitle</h5>
        <p class="card-text">@CardDesc</p>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 p-0">
                    <button class="btn-outline-info btn-block" type="submit" @onclick="@(x => NavigateToInfoPageWithId(@Id))">Learn more</button>
                </div>
                <br/>
                <div class="col-12 p-0">
                    <!--Before adding item to order check if there are any customisation options, if yes allow for selection-->
                    <button class="btn btn-primary btn-block" @onclick="@AddItemToOrder">Add</button>
                    @if(ShowCustomisationDialog)
                    {
                        <CustomisationComponent Title="@CardTitle" MenuItemId="@Id" CancelDialog="@CancelCustomisationDialog" DoneDialog="@DoneCustomisationDialog"/>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

