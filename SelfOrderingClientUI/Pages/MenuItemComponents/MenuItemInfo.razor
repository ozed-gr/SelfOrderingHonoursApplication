@page "/item/{Id:int?}"

<h1>@menuItem.Name</h1>
<br />
<h3>Ingredients:</h3>

<div class="container">
    <div class="row">
        @foreach (var ingr in menuItem.ItemIngredients)
        {
            <div class="col-sm">
                <div class="card" style="width: 25rem;">
                    <img class="card-img-top" src="@ingr.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@ingr.Name</h5>
                        <p class="card-text">@ingr.Category</p>
                        <p class="card-text">@ingr.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<hr />

<div>
    <p class="lead">@menuItem.Description</p>
</div>





